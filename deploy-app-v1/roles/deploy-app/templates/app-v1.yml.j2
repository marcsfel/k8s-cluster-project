apiVersion: apps/v1
kind: Deployment
metadata:
  name: ansible-v1
spec:
  replicas: {{ number_replicas }}
  selector:
    matchLabels:
      app: ansible
  template:
    metadata:
      labels:
        app: ansible
        version: {{ version }}
      annotations:
        prometheus.io/scrape: "{{ prometheus_scrape }}"
        prometheus.io/port: "{{ prometheus_port }}"
      spec:
        containers:
        - name: ansible
          image: linuxtips/nginx-prometheus-exporter:{{ version }}
          env:
          - name: VERSION
            value: {{ version }}
          ports:
          - containerPort: {{ nginx_port }}
          - containerPort: {{ prometheus_port }}
